{
  "name": "Wordle Turtle",
  "description": "Check your word before submitting to see if it's a prior solution.",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "src/images/turtle.png",
    "32": "src/images/turtle.png",
    "48": "src/images/turtle.png",
    "128": "src/images/turtle.png"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.nytimes.com/*"],
      "js": ["src/content.js"],
      "css": ["src/highlight-mode.css"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "src/images/turtle.png",
      "32": "src/images/turtle.png",
      "48": "src/images/turtle.png",
      "128": "src/images/turtle.png"
    }
  },
  "host_permissions": [
    "https://www.fiveforks.com/wordle"
  ],
  "permissions": ["activeTab", "scripting"]
}